# MCP Gateway Configuration
MCP_GATEWAY_URL=http://localhost:8100
MCP_GATEWAY_TIMEOUT=5000

# Hook Configuration
HOOK_TIMEOUT=60000
# Log levels: debug, info, warn, error, silent
#   - silent: Zero stderr output (recommended for production)
#   - error: Only critical errors
#   - warn: Errors and warnings
#   - info: Verbose logging
#   - debug: Full debugging with stack traces
LOG_LEVEL=silent
# Log format: json, pretty (use 'pretty' for cleaner output)
LOG_FORMAT=pretty

# Memory System Configuration
MEMORY_AUTO_SAVE=true
MEMORY_MIN_COMPLEXITY=medium
MEMORY_USER_ID=agent_claude_code

# Tool Catalog Path
TOOL_CATALOG_PATH=/opt/ozean-licht-ecosystem/tools/inventory/tool-catalog.json

# Validation Settings
VALIDATION_ENABLED=true
VALIDATION_STRICT_MODE=false

# Git Configuration
GIT_REPO_PATH=/opt/ozean-licht-ecosystem
