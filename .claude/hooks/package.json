{
  "name": "@ozean/claude-hooks",
  "version": "1.0.0",
  "description": "TypeScript-based hooks for Claude Code agentic enhancement",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/handlers",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "claude",
    "hooks",
    "typescript",
    "mcp",
    "automation"
  ],
  "author": "Ozean Licht",
  "license": "MIT",
  "dependencies": {
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "zod": "^3.22.4",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.4.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  }
}
