{
  "$schema": "https://claude.ai/schemas/settings-v1.json",
  "version": "1.0.0",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/pre-tool-use-simple"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/pre-tool-use-simple"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/pre-tool-use-simple"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/post-tool-use-simple"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/stop-simple"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/session-start-simple"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/session-end-simple"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/user-prompt-submit-simple"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/opt/ozean-licht-ecosystem/.claude/hooks/pre-compact-simple"
          }
        ]
      }
    ]
  },
  "metadata": {
    "description": "Claude Code hooks configuration for Ozean Licht Ecosystem",
    "created": "2025-11-11",
    "updated": "2025-11-11"
  }
}
