# Ozean Licht Ecosystem - Environment Variables Template
# Copy this file to .env and add your actual API keys

# ============================================
# REQUIRED API Keys
# ============================================

# Anthropic API Key (Required for ADW agents)
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-XXXXXXXX

# GitHub Personal Access Token (Required for GitHub operations)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:org
GITHUB_PAT=ghp_XXXXXXXX

# ============================================
# OPTIONAL API Keys
# ============================================

# OpenAI API Key (Optional: for comparison/fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-XXXXXXXX

# E2B API Key (Optional: for sandbox execution)
# Get from: https://e2b.dev/dashboard?tab=keys
E2B_API_KEY=XXXXXXXX

# ============================================
# GitHub Configuration
# ============================================

GITHUB_REPO_URL=https://github.com/USERNAME/ozean-licht-ecosystem
GITHUB_WEBHOOK_SECRET=XXXXXXXX  # For webhook automation (optional)

# ============================================
# Claude Configuration
# ============================================

CLAUDE_CODE_PATH=/usr/local/bin/claude  # Verify with: which claude
CLAUDE_CODE_USE_BEDROCK=0
CLAUDE_CODE_USE_VERTEX=0

# ============================================
# ADW Configuration
# ============================================

ADW_PORT_BACKEND_START=9100
ADW_PORT_FRONTEND_START=9200
ADW_MAX_CONCURRENT=15
ADW_DEFAULT_MODEL_SET=base  # Options: base, heavy

# ============================================
# Server Configuration (Hetzner)
# ============================================

SERVER_IP=138.201.139.25
SERVER_SSH_KEY=~/.ssh/ozean-automation

# ============================================
# MCP Services URLs (Running on Server)
# ============================================

COOLIFY_URL=http://coolify.ozean-licht.dev:8000
MEM0_URL=http://mem0.ozean-licht.dev:8090
QDRANT_URL=http://qdrant.ozean-licht.dev:6333
N8N_URL=http://n8n.ozean-licht.dev:5678

# ============================================
# Database Container IDs (PostgreSQL on Server)
# ============================================

# Kids Ascension Database
KA_DB_CONTAINER=iccc0wo0wkgsws4cowk4440c

# Ozean Licht Database
OL_DB_CONTAINER=zo8g4ogg8g0gss0oswkcs84w

# ============================================
# Project Configuration
# ============================================

PROJECT_NAME=ozean-licht-ecosystem
ENVIRONMENT=development  # Options: development, staging, production
LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR

