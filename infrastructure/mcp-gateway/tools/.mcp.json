      "args": [
        "/opt/ozean-licht-ecosystem/infrastructure/mcp-gateway/tools/playwright-server.js"
      ],
      "description": "Browser automation with Playwright",
      "capabilities": ["navigate", "screenshot", "click", "fill", "get_content"]
    },
    "shadcn": {
      "command": "node",
