    "magicui": {
      "command": "node",
      "args": [
        "/opt/ozean-licht-ecosystem/infrastructure/mcp-gateway/tools/magicui-server.js"
      ],
      "description": "MagicUI animated component management",
      "capabilities": ["list_components", "add_component", "get_component_docs"]
    }
  },
  "metadata": {
