# Authentication Secret (Generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here-min-32-chars

# NextAuth URL - The full URL where the app is hosted
NEXTAUTH_URL=https://dashboard.ozean-licht.dev

# Database URL - PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:5432/database-name

# MCP Gateway - Internal Docker network URL
MCP_GATEWAY_URL=http://mcp-gateway:8100

# MinIO Configuration
MINIO_ENDPOINT=http://138.201.139.25:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_SSL=false
MINIO_REGION=eu-central-1
MINIO_DEFAULT_BUCKET=ozean-ecosystem

# Application Settings
NODE_ENV=production
PORT=3000

# Optional: Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=your-google-analytics-id