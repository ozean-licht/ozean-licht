    "minio": {
      "name": "MinIO MCP",
      "type": "mcp",
      "tier": "tier3-mcp",
      "description": "S3-compatible object storage for file management",
      "location": "server",
      "version": "1.0.0",
      "status": "active",
      "dependencies": ["mcp-gateway"],
      "capabilities": [
        "upload",
        "list",
        "getUrl",
        "delete",
        "stat",
        "health"
      ],
      "commands": [
        {
          "command": "/mcp-minio upload [bucket] [fileKey] [contentType]",
          "description": "Upload file to MinIO bucket",
          "example": "/mcp-minio upload kids-ascension-staging videos/2025/video.mp4 video/mp4",
          "parameters": {
            "bucket": { "type": "string", "required": true },
            "fileKey": { "type": "string", "required": true },
            "contentType": { "type": "string", "required": true }
