    "coolify": {
      "name": "Coolify CLI Script",
      "type": "script-api",
      "tier": "tier2-api",
      "description": "Lightweight Coolify API wrapper for fast deployment operations",
      "location": "local",
      "version": "1.0.0",
      "status": "active",
      "scriptPath": "tools/scripts/coolify.sh",
      "dependencies": ["curl", "jq"],
      "capabilities": [
        "list-applications",
        "deploy-application",
        "restart-application",
        "get-status",
        "list-databases",
        "get-logs"
      ],
      "commands": [
        {
          "command": "bash tools/scripts/coolify.sh list_applications",
          "description": "List all Coolify applications",
          "example": "bash tools/scripts/coolify.sh list_applications",
          "exitCodes": {
            "0": "Success",
            "1": "API error",
            "2": "Authentication error"
          }
        },
        {
          "command": "bash tools/scripts/coolify.sh deploy_application [appId]",
          "description": "Trigger deployment for an application",
          "example": "bash tools/scripts/coolify.sh deploy_application 3",
          "parameters": {
            "appId": { "type": "number", "required": true }
          },
          "exitCodes": {
            "0": "Deployment triggered",
            "1": "Deployment failed"
          }
        },
        {
          "command": "bash tools/scripts/coolify.sh restart_application [appId]",
          "description": "Restart an application",
          "example": "bash tools/scripts/coolify.sh restart_application 3",
          "parameters": {
            "appId": { "type": "number", "required": true }
          }
        },
        {
          "command": "bash tools/scripts/coolify.sh get_application_status [appId]",
          "description": "Get current application status",
          "example": "bash tools/scripts/coolify.sh get_application_status 3",
          "parameters": {
            "appId": { "type": "number", "required": true }
          }
        },
        {
          "command": "bash tools/scripts/coolify.sh list_databases",
          "description": "List all databases",
          "example": "bash tools/scripts/coolify.sh list_databases"
        },
        {
          "command": "bash tools/scripts/coolify.sh get_logs [appId] [lines]",
          "description": "Fetch application logs",
          "example": "bash tools/scripts/coolify.sh get_logs 3 100",
          "parameters": {
            "appId": { "type": "number", "required": true },
            "lines": { "type": "number", "required": false, "default": 50 }
          }
        }
      ],
      "healthCheck": {
        "method": "http",
        "endpoint": "http://coolify.ozean-licht.dev:8000/api/health",
        "interval": 60
      },
      "performance": {
        "avgExecutionTime": "1-2s",
        "speedup": "3-5x faster than MCP"
      },
      "rationale": "Simple REST API - direct curl calls are faster than MCP routing"
    },
    "docker": {
      "name": "Docker CLI Script",
      "type": "script-native",
      "tier": "tier1-native",
      "description": "Docker container management via CLI",
      "location": "local",
      "version": "1.0.0",
      "status": "active",
      "scriptPath": "tools/scripts/docker.sh",
