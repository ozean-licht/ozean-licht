        },
        {
          "command": "bash tools/scripts/docker.sh stats_containers",
          "description": "Get resource usage statistics",
          "example": "bash tools/scripts/docker.sh stats_containers"
        },
        {
          "command": "bash tools/scripts/docker.sh restart_container [name]",
          "description": "Restart a container",
          "example": "bash tools/scripts/docker.sh restart_container mcp-gateway",
          "parameters": {
            "name": { "type": "string", "required": true }
          }
        },
        {
          "command": "bash tools/scripts/docker.sh exec_container [name] [command]",
          "description": "Execute command in container",
          "example": "bash tools/scripts/docker.sh exec_container mcp-gateway 'npm --version'",
          "parameters": {
            "name": { "type": "string", "required": true },
            "command": { "type": "string", "required": true }
          }
        },
        {
          "command": "bash tools/scripts/docker.sh health_check [name]",
          "description": "Check container health status",
          "example": "bash tools/scripts/docker.sh health_check mcp-gateway",
          "parameters": {
            "name": { "type": "string", "required": true }
          }
        }
      ],
      "healthCheck": {
        "method": "cli",
        "command": "docker ps",
        "interval": 60
      },
      "performance": {
        "avgExecutionTime": "< 1s",
        "speedup": "5x faster than MCP"
      },
      "rationale": "Native CLI is self-documenting and widely understood"
    },
    "git": {
