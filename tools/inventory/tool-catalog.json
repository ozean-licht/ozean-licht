        },
        {
          "command": "/mcp-minio list [bucket] --prefix=[prefix]",
          "description": "List files in bucket",
          "example": "/mcp-minio list kids-ascension-staging --prefix=videos/",
          "parameters": {
            "bucket": { "type": "string", "required": true },
            "prefix": { "type": "string", "required": false }
          }
        },
        {
          "command": "/mcp-minio getUrl [bucket] [fileKey]",
          "description": "Get presigned URL for file",
          "example": "/mcp-minio getUrl kids-ascension-staging videos/2025/video.mp4",
          "parameters": {
            "bucket": { "type": "string", "required": true },
            "fileKey": { "type": "string", "required": true }
          }
        },
        {
          "command": "/mcp-minio delete [bucket] [fileKey]",
          "description": "Delete file from bucket",
          "example": "/mcp-minio delete kids-ascension-staging videos/2025/video.mp4",
          "parameters": {
            "bucket": { "type": "string", "required": true },
            "fileKey": { "type": "string", "required": true }
          }
        }
      ],
      "healthCheck": {
        "method": "http",
        "endpoint": "http://138.201.139.25:9000/minio/health/live",
        "interval": 60
      },
      "tokenCost": {
        "avgTokensPerCall": 350,
        "costPerCall": 0.001,
        "complexity": "medium"
      },
      "rateLimit": {
        "requestsPerMinute": 100,
        "burstLimit": 20
      },
      "rationale": "S3 protocol handling and presigned URL generation"
    },
