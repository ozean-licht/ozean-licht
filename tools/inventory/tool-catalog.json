{
  "version": "1.0.0",
  "updated": "2025-11-11",
  "schema": {
    "description": "Master tool catalog for Ozean Licht Ecosystem",
    "includes": "MCP services, script-based tools, and native utilities"
  },
  "tools": {
    "postgres": {
      "name": "PostgreSQL MCP",
      "type": "mcp",
      "tier": "tier3-mcp",
      "description": "Database operations for kids-ascension and ozean-licht databases",
      "location": "server",
      "version": "1.0.0",
      "status": "active",
      "dependencies": ["mcp-gateway"],
      "capabilities": [
        "list-tables",
        "describe-table",
        "query",
        "schema-introspection",
        "connection-stats"
      ],
      "commands": [
        {
          "command": "/mcp-postgres [db] list tables",
          "description": "List all tables in the specified database",
          "example": "/mcp-postgres kids-ascension-db list tables",
          "parameters": {
            "db": {
              "type": "string",
              "required": true,
              "values": ["kids-ascension-db", "ozean-licht-db", "shared-users-db", "orchestrator-db"]
            }
          }
        },
        {
          "command": "/mcp-postgres [db] describe [table]",
          "description": "Get schema information for a specific table",
          "example": "/mcp-postgres kids-ascension-db describe users",
          "parameters": {
            "db": { "type": "string", "required": true },
            "table": { "type": "string", "required": true }
          }
        },
        {
          "command": "/mcp-postgres [db] query \"[sql]\"",
          "description": "Execute a SQL query (read-only by default)",
          "example": "/mcp-postgres ozean-licht-db query \"SELECT * FROM courses LIMIT 10\"",
          "parameters": {
            "db": { "type": "string", "required": true },
            "sql": { "type": "string", "required": true }
          }
        }
      ],
      "healthCheck": {
        "method": "http",
        "endpoint": "http://localhost:8100/health",
        "interval": 60
      },
      "tokenCost": {
        "avgTokensPerCall": 500,
        "costPerCall": 0.0015,
        "complexity": "medium"
      },
      "rateLimit": {
        "requestsPerMinute": 100,
        "burstLimit": 20
      },
      "rationale": "Requires connection pooling, parameterized queries, and transaction management"
    },
    "mem0": {
      "name": "Mem0 MCP",
      "type": "mcp",
      "tier": "tier3-mcp",
      "description": "Persistent memory and context management with vector search",
      "location": "server",
      "version": "1.0.0",
      "status": "active",
      "alwaysActive": true,
      "dependencies": ["mcp-gateway"],
      "capabilities": [
        "remember",
        "search",
        "get-context",
        "list-memories",
        "delete-memory"
      ],
      "commands": [
        {
          "command": "/mcp-mem0 remember \"[content]\"",
          "description": "Store a new memory",
          "example": "/mcp-mem0 remember \"User prefers TypeScript for all new projects\"",
          "parameters": {
            "content": { "type": "string", "required": true }
          }
        },
        {
          "command": "/mcp-mem0 search \"[query]\"",
          "description": "Search through stored memories using vector similarity",
          "example": "/mcp-mem0 search \"programming preferences\"",
          "parameters": {
            "query": { "type": "string", "required": true }
          }
        },
        {
          "command": "/mcp-mem0 get-context [user_id]",
          "description": "Retrieve all memories for a specific user",
          "example": "/mcp-mem0 get-context agent_001",
          "parameters": {
            "user_id": { "type": "string", "required": true }
          }
        }
      ],
      "healthCheck": {
        "method": "http",
        "endpoint": "http://mem0.ozean-licht.dev:8090/health",
        "interval": 60
      },
      "tokenCost": {
        "avgTokensPerCall": 200,
        "costPerCall": 0.0006,
        "complexity": "low"
      },
      "rateLimit": {
        "requestsPerMinute": 200,
        "burstLimit": 50
      },
      "rationale": "Vector search and persistent state management require specialized service"
    },
    "cloudflare": {
      "name": "Cloudflare MCP",
